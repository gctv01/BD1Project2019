<div class="label text-center my-2 display-1">Historial Piezas</div>
<div class="m-2 bg-white p-1">
    <table id="example" class="table table-striped table-bordered table-hover" style="width:100%">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Precio Bolivares</th>
                <th>Inflacion</th>
                <th>Pieza</th>
                <th>Fecha Fin</th>
            </tr>
        </thead>
        <tbody>
            {{#each historial}}
            <tr>
                <td>{{fecha}}</td>
                <td>{{precio_bs}}</td>
                <td>{{inflacion}}</td>
                <td>{{id_pieza}}</td>
                <td>{{fecha_fin}}</td>
                <form action="/eliminarC{{id}}" method="GET">
                    <td><button class="btn btn-danger">eliminar</button></td>
                </form>
                <form action="/modificarC{{id}}" method="GET">                   
                    <td><button class="btn btn-warning">modificar</button></td>
                </form>
                
            </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <th>Fecha</th>
                <th>Precio Bolivares</th>
                <th>Inflacion</th>
                <th>Pieza</th>
                <th>Fecha Fin</th>
            </tr>
        </tfoot>
    </table>
</div>