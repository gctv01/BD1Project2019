<div class="label text-center my-2 display-1">Piezas Institucional</div>
<div class="m-2 bg-white p-1">
    <table id="example" class="table table-striped table-bordered table-hover" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Descripcion</th>
                <th>Eliminar</th>
                <th>Modificar</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            {{#each pieza}}
            <tr>
                <td>{{id}}</td>
                <td>{{descr}}</td>
                <form action="/eliminarPI{{id}}" method="GET">
                    <td><button class="btn btn-danger">eliminar</button></td>
                </form>
                <form action="/modificarP{{id}}" method="GET">                   
                    <td><button class="btn btn-warning">modificar</button></td>
                </form>
                <form action="/verPrecioI{{id}}" method="GET">                   
                    <td><button class="btn btn-primary">Ver Precio</button></td>
                </form>
                <td>{{precio_bs}}</td>
                 {{/each}}
                 
            </tr>
           
        </tbody>
        <tfoot>
            <tr>
                <th>ID</th>
                <th>Descripcion</th>
                <th>Eliminar</th>
                <th>Modificar</th>
                <th>Precio</th>
            </tr>
        </tfoot>
    </table>
</div>