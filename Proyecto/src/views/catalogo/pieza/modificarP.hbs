<div class="label text-center my-2 display-1">MODIFICAR PIEZA</div>
<div class="row mx-auto">
  <div class="card mx-auto mt-2" style="width: 60rem;">
    <div class="card-body">
        <h5 class="text-center">ID: {{id}}</h5>
      <form action="/modificarP{{id}}" method="POST">
        
        <div class="form-group">
          <label>Descripcion</label>
          <input type="text" name="descr" class="form-control" placeholder="Descripcion" value={{descr}}>
        </div>

        <label>Coleccion</label>
        <br>
        <div class="m-2 bg-white p-1">
          <table id="example" class="table table-striped table-bordered table-hover" style="width:100%">
            <thead>
              <tr>
                <th>Checkbox</th>
                <th>ID</th>
                <th>Descripcion</th>
                <th>Categoria</th>
                <th>Linea</th>
              </tr>
            </thead>
            <tbody>
              {{#each coleccion}}
              <tr>
                <td>
                  <div class="form-check">
                    <input class="form-check-input" name="idc" type="checkbox" value={{id}}>
                  </div>
                </td>
                <td>{{id}}</td>
                <td>{{descr}}</td>
                <td>{{categoria}}</td>
                <td>{{linea}}</td>                
              </tr>
              {{/each}}
            </tbody>
            <tfoot>
              <tr>
                <th>Checkbox</th>
                <th>ID</th>
                <th>Descripcion</th>
                <th>Categoria</th>
                <th>Linea</th>
              </tr>
            </tfoot>
          </table>
        </div>

        <label>Color Motivo</label>
        <br>
        <div class="m-2 bg-white p-1">
          <table id="example" class="table table-striped table-bordered table-hover" style="width:100%">
            <thead>
              <tr>
                <th>Checkbox</th>
                <th>ID</th>
                <th>Nombre</th>
                <th>Tipo</th>
              </tr>
            </thead>
            <tbody>
              {{#each col_mot}}
              <tr>
                <td>
                  <div class="form-check">
                    <input class="form-check-input" name="idcm" type="checkbox" value={{id}}>
                  </div>
                </td>
                <td>{{id}}</td>
                <td>{{nombre}}</td>
                <td>{{tipo}}</td>                
              </tr>
              {{/each}}
            </tbody>
            <tfoot>
              <tr>
                <th>Checkbox</th>
                <th>ID</th>
                <th>Nombre</th>
                <th>Tipo</th>
              </tr>
            </tfoot>
          </table>
        </div>

        <label>Molde</label>
        <br>
        <div class="m-2 bg-white p-1">
          <table id="example" class="table table-striped table-bordered table-hover" style="width:100%">
            <thead>
              <tr>
                <th>Checkbox</th>
                <th>ID</th>
                <th>Tipo</th>
                <th>Tipo De Plato</th>
                <th>Forma</th>
                <th>Tamano</th>
                <th>Tipo De Taza</th>
                <th>Volumen</th>
                <th>Cantidad De Personas</th>
              </tr>
            </thead>
            <tbody>
              {{#each molde}}
              <tr>
                <td>
                  <div class="form-check">
                    <input class="form-check-input" name="idm" type="checkbox" value={{id}}>
                  </div>
                </td>
                <td>{{id}}</td>
                <td>{{tipo}}</td>
                <td>{{tipo_plato}}</td>
                <td>{{forma}}</td>
                <td>{{tamano}}</td>
                <td>{{tipo_taza}}</td> 
                <td>{{volumen}}</td>
                <td>{{cant_pers}}</td>               
              </tr>
              {{/each}}
            </tbody>
            <tfoot>
              <tr>
                <th>Checkbox</th>
                <th>ID</th>
                <th>Tipo</th>
                <th>Tipo De Plato</th>
                <th>Forma</th>
                <th>Tamano</th>
                <th>Tipo De Taza</th>
                <th>Volumen</th>
                <th>Cantidad De Personas</th>
              </tr>
            </tfoot>
          </table>
        </div>

        <button type="submit" class="btn btn-block btn-primary">Modificar</button>
      </form>

    </div>
  </div>
</div>