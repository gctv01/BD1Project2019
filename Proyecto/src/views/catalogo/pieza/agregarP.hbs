<div class="label text-center my-2 display-1">AGREGAR JUEGO</div>
<div class="row mx-auto">
  <div class="card mx-auto mt-2" style="width: 40rem;">
    <div class="card-body">

      <form action="/agregarP{{id}}" method="POST">
        
        <div class="form-group">
          <label>Descripcion</label>
          <input type="text" name="descr" class="form-control" placeholder="Descripcion">
        </div>

        <label>Coleccion</label>
        <br>
        <div class="m-2 bg-white p-1">
          <table id="example" class="table table-striped table-bordered table-hover" style="width:100%">
            <thead>
              <tr>
                <th>Checkbox</th>
                <th>ID</th>
                <th>Descripcion</th>
                <th>Categoria</th>
                <th>Linea</th>
                <th>Checkbox</th>
                <th>ID</th>
                <th>Nombre</th>
                <th>Tipo</th>
              </tr>
            </thead>
            <tbody>
              {{#each coleccion}}
              <tr>
                <td>
                  <div class="form-check">
                    <input class="form-check-input" name="idp" type="checkbox" value={{id}}>
                  </div>
                </td>
                <td>{{id}}</td>
                <td>{{descr}}</td>
                <td>{{categoria}}</td>
                <td>{{linea}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>

        <button type="submit" class="btn btn-block btn-primary">Registrar</button>
      </form>

    </div>
  </div>
</div>