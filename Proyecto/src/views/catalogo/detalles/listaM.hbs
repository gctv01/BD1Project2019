<div class="label text-center my-2 display-1">MOLDE</div>
<div class="m-2 bg-white p-1">
    <table id="example" class="table table-striped table-bordered table-hover" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tipo</th>
                <th>Tipo Plato</th>
                <th>Forma</th>
                <th>Tamano</th>
                <th>Tipo Taza</th>
                <th>Volumen</th>
                <th>Cantidad De Personas</th>
            </tr>
        </thead>
        <tbody>
            {{#each molde}}
            <tr>
                <td>{{id}}</td>
                <td>{{tipo}}</td>
                <td>{{tipo_plato}}</td>
                <td>{{forma}}</td>
                <td>{{tamano}}</td>
                <td>{{tipo_taza}}</td>
                <td>{{volumen}}</td>
                <td>{{cant_pers}}</td>
                <form action="/eliminarM{{id}}" method="GET">
                    <td><button class="btn btn-danger">eliminar</button></td>
                </form>
                <form action="/modificarM{{id}}" method="GET">                   
                    <td><button class="btn btn-warning">modificar</button></td>
                </form>
                
            </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr>
              <th>ID</th>
                <th>Tipo</th>
                <th>Tipo Plato</th>
                <th>Forma</th>
                <th>Tamano</th>
                <th>Tipo Taza</th>
                <th>Volumen</th>
                <th>Cantidad De Personas</th>
            </tr>
        </tfoot>
    </table>
</div>