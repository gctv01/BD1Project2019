<div class="label text-center my-2 display-1">MODIFICAR COLOR MOTIVO</div>
<div class="row mx-auto">
  <div class="card mx-auto mt-2" style="width: 40rem;">
    <div class="card-body">
        <h5 class="text-center">ID: {{id}}</h5>
      <form action="/modificarCM{{id}}" method="POST">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label>Nombre</label>
            <input type="text" name="nombre" class="form-control" placeholder="nombre" value={{nombre}}>
          </div>
        </div>

        <div class="form-group" value={{tipo}}>
          <label>Tipo</label>
          <br>
          <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" id="t1" name="tipo" class="custom-control-input" value="Color">
            <label class="custom-control-label" for="t1">Color</label>
          </div>
          <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" id="t2" name="tipo" class="custom-control-input" value="Motivo">
            <label class="custom-control-label" for="t2">Motivo</label>
          </div>
        </div>


        <div class="form-group">
          <label>Descripcion</label>
          <input type="text" name="descr" class="form-control" placeholder="Descripcion" value={{descr}}>
        </div>

        <label>Colecciones</label>
        <br>
        <div class="m-2 bg-white p-1">
          <table id="myTable" class="table table-striped table-bordered table-hover" style="width:100%">
            <thead>
              <tr>
                <th>Checkbox</th>
                <th>ID</th>
                <th>Descripcion</th>
                <th>Categoria</th>
                <th>Linea</th>
              </tr>
            </thead>
            <tbody>
              {{#each coleccion}}
              <tr>
                <td>
                  <div class="form-check">
                    <input class="form-check-input" name="idc" type="checkbox" value={{id}}>
                  </div>
                </td>
                <td>{{id}}</td>
                <td>{{descr}}</td>
                <td>{{categoria}}</td>
                <td>{{linea}}</td>
              </tr>
              {{/each}}
            </tbody>
            <tfoot>
              <tr>
               <th>Checkbox</th>
                <th>ID</th>
                <th>Descripcion</th>
                <th>Categoria</th>
                <th>Linea</th>
              </tr>
            </tfoot>
          </table>
        </div>

        <button type="submit" class="btn btn-block btn-primary">Modificar</button>
      </form>

    </div>
  </div>
</div>