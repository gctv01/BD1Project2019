<div class="label text-center my-2 display-1">COLOR MOTIVO</div>
<div class="m-2 bg-white p-1">
    <table id="example" class="table table-striped table-bordered table-hover" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>Descripcion</th>
            </tr>
        </thead>
        <tbody>
            {{#each col_mot}}
            <tr>
                <td>{{id}}</td>
                <td>{{nombre}}</td>
                <td>{{tipo}}</td>
                <td>{{descr}}</td>
                <form action="/eliminarCM{{id}}" method="GET">
                    <td><button class="btn btn-danger">eliminar</button></td>
                </form>
                <form action="/modificarCM{{id}}" method="GET">                   
                    <td><button class="btn btn-warning">modificar</button></td>
                </form>
                
            </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>Descripcion</th>
            </tr>
        </tfoot>
    </table>
</div>