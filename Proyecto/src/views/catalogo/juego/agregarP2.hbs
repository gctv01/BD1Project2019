<div class="label text-center my-2 display-1">Piezas</div>
<div class="m-2 bg-white p-1">    
        <h5 class="text-center">ID: {{id}}</h5>
    <table id="example" class="table table-striped table-bordered table-hover" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Descripcion</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
        <form action="/catalogo/agregarP2{{pid}}{{id}}" method="POST">  
            
                {{#each pieza}}
                <tr>
                <td>{{pid}}</td>
                <td>{{descr}}</td>
                <td class="form-group">
                <input type="number" name="cant" class="form-control">
                </td>
               <td><button class="btn btn-primary">Agregar</button></td>
               </tr>
               {{/each}}
            
            
        </form>           
        </tbody>
        <tfoot>
            <tr>
                <th>ID</th>
                <th>Descripcion</th>
                <th>cantidad</th>
            </tr>
        </tfoot>
    </table>
</div>