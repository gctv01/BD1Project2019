<div class="label text-center my-2 display-1">Juegos</div>
<div class="m-2 bg-white p-1">
    <table id="example" class="table table-striped table-bordered table-hover" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Descripcion</th>
            </tr>
        </thead>
        <tbody>
            {{#each pieza}}
            <tr>
                <td>{{id}}</td>
                <td>{{descr}}</td>
               <form action="/catalogo/agregar_P2{{id}}" method="GET">
                    <td><button class="btn btn-primary">Agregar</button></td>
                </form>
            </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <th>ID</th>
                <th>Descripcion</th>
            </tr>
        </tfoot>
    </table>
</div>