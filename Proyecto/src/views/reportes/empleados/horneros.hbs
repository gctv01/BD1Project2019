<div class="label text-center my-2 display-1">Control de horneros (mensual)</div>
<div class="row mx-auto">
    <div class="card mx-auto mt-2" style="width: 40rem;">
        <div class="card-body">
            <form action="/reportes/empleados/horneros" method="POST">

                <div class="form-group">
                    <label>Horneros</label>
                    <select class="custom-select" id="inlineFormCustomSelect" name="di">
                        {{#each hornero}}
                        <option value={{di}}>{{di}} | {{nombre}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="form-group">
                    <label>Mes de consulta</label>
                    <input type="date" name="fecha_nacimiento" class="form-control">
                </div>

                <hr>
                <button type="submit" class="btn btn-block btn-primary">Registrar</button>
            </form>

        </div>
    </div>
</div>