<div class="label text-center my-2 display-1">AGREGAR CLIENTE</div>
<div class="row mx-auto">
  <div class="card mx-auto mt-2" style="width: 40rem;">
    <div class="card-body">
      <h5 class="text-center">DATOS DEL CLIENTE</h5>
      <hr>
      <form action="/cliente/agregar" method="POST">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label>Nombre Cliente Jurídico/label>
            <input type="text" name="nombre" class="form-control" placeholder="Nombre">
          </div>
          
          
        </div>

        <div class="form-group">
          <label>DI</label>
          <input type="number" name="di" class="form-control" placeholder="ID">
        </div>

      

        <div class="form-group">
          <label>País</label>
          <br>
          <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" id="gm" name="pais" class="custom-control-input" value="V">
            <label class="custom-control-label" for="gm">Venezuela</label>
          </div>
          <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" id="gf" name="pais" class="custom-control-input" value="C">
            <label class="custom-control-label" for="gf">Colombia</label>
          </div>
          <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" id="gt" name="pais" class="custom-control-input" value="R">
            <label class="custom-control-label" for="gt">República Dominicana</label>
          </div>
          <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" id="gt" name="pais" class="custom-control-input" value="U">
            <label class="custom-control-label" for="gt">Estados Unidos</label>
          </div>
        </div>

        

        

        

        <hr>
        <button type="submit" class="btn btn-block btn-primary">Registrar</button>
      </form>

    </div>
  </div>
</div>