<div class="label text-center my-2 display-1">ASIGNAR TURNO</div>
<div class="row mx-auto">
    <div class="card mx-auto mt-2" style="width: 40rem;">
        <div class="card-body">
            <h5 class="text-center">DATOS DEL TURNO</h5>
            <hr>
            <form action="/empleado/agregar/turno" method="POST">

                <div class="form-group">
                    <label>DI Hornero</label>
                    <select class="custom-select" id="inlineFormCustomSelect" name="di">
                        {{#each hornero}}
                        <option value={{di}}>{{di}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="form-group">
                    <label>Turno</label>
                    <br>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="1" name="turno" class="custom-control-input" value=1>
                        <label class="custom-control-label" for="1">1</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="2" name="turno" class="custom-control-input" value=2>
                        <label class="custom-control-label" for="2">2</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="3" name="turno" class="custom-control-input" value=3>
                        <label class="custom-control-label" for="3">3</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-block btn-primary">Asignar</button>
            </form>

        </div>
    </div>
</div>