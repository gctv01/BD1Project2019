<div class="label text-center my-2 display-1">AGREGAR PEDIDO INSTITUCIONAL</div>
<div class="row mx-auto">
    <div class="card mx-auto mt-2" style="width: 40rem;">
        <div class="card-body">
            <h5 class="text-center">DATOS DEL PEDIDO</h5>
            <hr>
            <form action="/ventas/agregar/pedido/inst" method="POST">
                <div class="form-group">
                    <label>ID Cliente</label>
                    <select class="custom-select" id="inlineFormCustomSelect" name="id">
                        {{#each cliente}}
                        <option value={{id}}>{{id}}</option>
                        {{/each}}
                    </select>
                </div>

                <label>Juegos</label>
                <br>
                <div class="m-2 bg-white p-1">
                    <table id="example" class="table table-striped table-bordered table-hover" style="width:100%">
                        <thead>
                            <tr>
                                <th>Checkbox</th>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Cantidad de personas</th>
                                <th>Descripcion</th>
                                <th>Cantidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each juego}}
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input" name="idj" type="checkbox" value={{idj}}>
                                    </div>
                                </td>
                                <th>{{idj}}</th>
                                <th>{{nombre}}</th>
                                <th>{{cant_personas}}</th>
                                <th>{{dj}}</th>
                                <th>
                                    <div class="form-group">
                                        <input type="number" name="cj" class="form-control" placeholder="Cantidad">
                                    </div>
                                </th>
                            </tr>
                            {{/each}}
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Checkbox</th>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Cantidad de personas</th>
                                <th>Descripcion</th>
                                <th>Cantidad</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <label>Piezas</label>
                <br>
                <div class="m-2 bg-white p-1">
                    <table id="example1" class="table table-striped table-bordered table-hover" style="width:100%">
                        <thead>
                            <tr>
                                <th>Checkbox</th>
                                <th>ID</th>
                                <th>Descripcion</th>
                                <th>Cantidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each pieza}}
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input" name="idp" type="checkbox" value={{idp}}>
                                    </div>
                                </td>
                                <th>{{idp}}</th>
                                <th>{{dp}}</th>
                                <th>
                                    <div class="form-group">
                                        <input type="number" name="cp" class="form-control"
                                            placeholder="Cantidad">
                                    </div>
                                </th>
                            </tr>
                            {{/each}}
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Checkbox</th>
                                <th>ID</th>
                                <th>Descripcion</th>
                                <th>Cantidad</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <hr>
                <button type="submit" class="btn btn-block btn-primary">Agregar</button>
            </form>

        </div>
    </div>
</div>