<div class="label text-center my-2 display-1">AGREGAR CLIENTE</div>
<div class="row mx-auto">
    <div class="card mx-auto mt-2" style="width: 40rem;">
        <div class="card-body">
            <h5 class="text-center">DATOS DEL CLIENTE</h5>
            <hr>
            <form action="/ventas/agregar/cliente" method="POST">
                <div class="form-group">
                    <label>Nombre</label>
                    <input type="text" name="nombre" class="form-control" placeholder="Nombre">
                </div>

                <div class="form-group">
                    <label>Pais</label>
                    <select class="custom-select" id="inlineFormCustomSelect" name="pais">
                        <option value='V'>Venezuela</option>
                        <option value='C'>Colombia</option>
                        <option value='R'>Republica Dominicana</option>
                        <option value='U'>USA</option>
                    </select>
                </div>

                <hr>
                <button type="submit" class="btn btn-block btn-primary">Registrar</button>
            </form>

        </div>
    </div>
</div>